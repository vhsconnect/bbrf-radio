{
  "name": "bbrf-radio",
  "version": "0.5.1",
  "main": "./server/server.mjs",
  "author": "vhsconnect",
  "license": "GPL-2.0-only",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "RADIO_DEBUG=1 nodemon --ignore server/storage.json server/server.mjs & npm run hot",
    "app": "node server/server.mjs",
    "start": "npm run build && npm run app",
    "hot": "esbuild src/Comps/App.jsx --bundle --outfile=./index.js --watch",
    "build": "esbuild src/Comps/App.jsx --bundle --define:process.env.NODE_ENV=\"'production'\" --minify --outfile=./index.js",
    "defaults": "mv server/template.json server/storage.json",
    "node2nix": "node2nix -18 -i package.json -l package-lock.json",
    "build-nix-local": "nix build . --impure"
  },
  "dependencies": {
    "@fastify/static": "^5.0.0",
    "esbuild": "^0.18.8",
    "fastify": "^3.29.0",
    "got": "^12.0.1",
    "ramda": "^0.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "^7.5.4",
    "uri-template": "^2.0.0",
    "xdg-portable": "^10.5.1"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
    "eslint-plugin-react": "^7.28.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  },
  "bin": "./server/server.js"
}
